# ========================
# Server Configuration
# ========================
PORT=4000
NODE_ENV=development

# ========================
# Database
# ========================
MONGODB_URI=

# ========================
# Security
# ========================
JWT_SECRET=
JWT_EXPIRES_IN=1h
COOKIE_SECRET=
COOKIE_DOMAIN=localhost

# ========================
# Rate Limiting
# ========================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# ========================
# Frontend URL (CORS)
# ========================
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ========================
# Logging
# ========================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ========================
# Maps API Key (LocationIQ)
# ========================
LOCATIONIQ_API_KEY=
